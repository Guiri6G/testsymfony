{% extends 'base.html.twig' %}

{% block title %}Voir sous-sous famille {% endblock %}

{% block body %}

<table class="table table-hover">
    <thead>
      <tr>
        <th> # </th>
        <th> Nom </th>
        <th> Sous-Famille </th>
        <th></th>
      </tr>
    </thead>
    <tbody>
		{% for SSFamille in SSFamilles %}
      <tr>
        <td>  </td>
        <td> {{ SSFamille.libelle }} </td>
        <td> {{ SSFamille.idSousFamille.libelle }} </td>
        <td> 
        
        <a href="{{ path('modif_sousSous', {'id': SSFamille.id}) }}" class="btn btn-primary btn" alt="modifier"> <i class="fas fa-edit"></i> </a> 
        <a href="{{ path('delete_sousSous', {'id': SSFamille.id}) }}" onclick="return confirm('êtes-vous sûr de vouloir supprimer : {{SSFamille.libelle}} ?')"  class="btn btn-danger btn" alt="supprimer"> <i class="fas fa-trash-alt"></i> </a>
        </td>
      </tr>
  	{% endfor %}
    </tbody>
  </table>

{% endblock %}